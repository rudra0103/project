<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="20dp"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/productDetail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="40dp"
                android:text="Booking Details"
                android:textSize="23dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:src="@mipmap/share"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="10dp"
        android:background="#F6F6F6">


        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/shoesimages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scrollIndicators="bottom"
            app:iss_auto_cycle="true"
            app:iss_corner_radius="50"
            app:iss_delay="1000"
            app:iss_no_dots="false"
            app:iss_unselected_dot="@color/white"
            app:iss_period="4000" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/tvProductUserPname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Name:"
                android:layout_marginLeft="6dp"
                android:textSize="25sp"
                android:textStyle="bold"/>

                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_marginLeft="6dp"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/ser_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Category:"
                android:layout_marginLeft="6dp"
                android:textColor="#117CC7"
                android:textSize="25sp"
                android:textStyle="bold"/>
                <TextView
                    android:layout_margin="5dp"
                    android:id="@+id/ser_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category:"
                    android:layout_marginLeft="6dp"
                    android:textColor="#117CC7"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Price :"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" â‚¹ 890"
                        android:textSize="25sp"
                        android:textStyle="bold"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FLAT 20% OFF"
                    android:textSize="25dp"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"
                    android:textColor="#01D10B"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp">
            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Description"
                        android:textColor="#2196F3"
                        android:textSize="25sp"
                        android:layout_weight="1.9"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"></LinearLayout>


                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*   Top-grain Italian leather
        *   Solid wood frame
*   High-density foam cushions
*   Adjustable headrests
*   Available in multiple colors"
                    android:textSize="15sp"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <Button
            android:layout_weight="1"
            android:id="@+id/btnAddtoCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Proced Book"
            android:textColor="@color/white"/>
    </LinearLayout>

</ScrollView>
